<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>
                <strong>User Name</strong>
            </th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= link_to 'Make Admin', make_admin_path(user), method: :patch %></td>
                <td><%= link_to 'Remove Admin', remove_admin_path(user), method: :patch %></td>
            </tr>
        <% end %>
    </tbody>
</table>